# Supabase (pure local default)
NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-local-anon-key-from-supabase-local

# App URLs
# Use http://localhost:3000 for pure local dev, switch to https://ncskit.org only if tunneling
NEXT_PUBLIC_APP_URL=http://localhost:3000
# Leave empty for localhost; set to .ncskit.org when running via Cloudflare tunnel
NEXT_PUBLIC_COOKIE_DOMAIN=
# Backend API (Django + REST) exposed locally or via tunnel
NEXT_PUBLIC_API_URL=http://localhost:8001

# R Analytics (local R service default)
NEXT_PUBLIC_ANALYTICS_URL=http://localhost:8000

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_REALTIME=true
NEXT_PUBLIC_ENABLE_FILE_UPLOAD=true

